<div class="container">
  <h1>Modification du telephone</h1>
  <%= simple_form_for(@phone) do |f| %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :price %>
    <%= f.input :capacity_go %>
    <%= f.input :color %>
    <%= f.input :camera %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }  %>
    <%= f.submit "Enregistrer les modifications", class: "btn btn-primary" %>
  <% end %>
</div>
