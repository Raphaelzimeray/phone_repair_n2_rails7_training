<div class="container">
  <div class ="h1-the-phones-parent">
    <h1>Voici les telephones</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: phones_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="phones-list">
    <% @phones.each do |phone| %>
      <div class="phone-description">
        <%= link_to phone_path(phone), class: "link-to-index" do %>
          <%= cl_image_tag phone.photos.first.key, height: 300, width: 400, crop: :fill, class: "photo-index" %>
          <div class="phone-specification-index">
            <p> üì± <%= phone.brand %> </p>
            <p> ‚òéÔ∏è <%= phone.model %> </p>
            <p> üí∏ <%= phone.price %> ‚Ç¨ </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="new-phone">
      <% if policy(Phone).create? %>
        <%= link_to "Creer un nouveau telephone", new_phone_path, class: "new-phone-index-link"%>
      <% end%>
    </div>
</div>
